<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>SampleServlet</servlet-name>
  	<display-name>SampleServlet</display-name>
  	<description></description>
  	<servlet-class>com.mercury.java_web_demo.servlet.SampleServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>UserServlet</servlet-name>
  	<display-name>UserServlet</display-name>
  	<description></description>
  	<servlet-class>com.mercury.java_web_demo.servlet.UserServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>SampleServlet</servlet-name>
  	<url-pattern>/samples</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<!-- users 请求通过 UserServlet 处理 -->
  	<servlet-name>UserServlet</servlet-name>
  	<url-pattern>/users</url-pattern>
  </servlet-mapping>
  
</web-app>
